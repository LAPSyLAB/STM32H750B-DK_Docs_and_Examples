{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            // "showDevDebugOutput": false,

            "servertype": "openocd",
            "runToEntryPoint": "entry",
            "executable": "./build/starter",
            
            "device": "STM32H750X",
            "svdFile": "${workspaceFolder}/STM32H750X.svd",
            "configFiles": ["board/stm32h750b-disco.cfg"],

            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },

            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "swoFrequency": 2000,
                "cpuFrequency": 400000,
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 1
                    }
                ]
            }
        }
    ]
}
